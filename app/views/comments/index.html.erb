<h1>Listing comments</h1>
<br>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th> Marble</th>
      <th> Comment text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user.user_name %></td>
        <td><%= comment.marble.marble_name %></td>
        <td><%= comment.comment_text %></td>
        <td><strong><%= link_to '| Show', comment %><strong> |</td> 
        <td><strong><%= link_to ' Edit', edit_comment_path(comment) %><strong> |</td> 
        <td><strong><%= link_to ' Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %><strong></td>
      </tr>
    <% end %>
  </tbody>
</table>

